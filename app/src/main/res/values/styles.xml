<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>

    </style>

    <style name="mainTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/biryani</item>
    </style>

    <style name="secondaryTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/open_sans_light</item>
    </style>

    <style name="detailActivitiesTextStyle" parent="secondaryTextStyle">
        <item name="android:textSize">18sp</item>
    </style>


</resources>
